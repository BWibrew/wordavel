{
  "name": "jamin87/wordavel",
  "description": "An experiment merging Laravel with WordPress.",
  "keywords": [
    "framework",
    "laravel",
    "wordpress"
  ],
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Benjamin Wibrew",
      "email": "benjamin.wibrew@gmail.com",
      "homepage": "http://benjaminwibrew.com",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6.4",
    "composer/installers": "^1.3",
    "johnpbloch/wordpress": "^4.8",
    "laravel/framework": "5.4.*",
    "laravel/tinker": "~1.0",
    "oscarotero/env": "^1.0",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "laravel/homestead": "^5.0",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.7",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/css-selector": "3.2.*",
    "symfony/dom-crawler": "3.2.*"
  },
  "extra": {
    "installer-paths": {
      "public/wp/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/wp/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp/core"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
